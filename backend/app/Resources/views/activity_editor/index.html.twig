{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/static/team.css">
{% endblock %}

{% block body %}
    <ul>
        <li><a href="{{ path('team_dashboard', {'_locale': 'en'}) }}">Back to the dashboard</a></li>
    </ul>
    <h1>
        {% if 'en' == app.request.locale %}
            Activity List
        {% else %}
            Activity Translations List: {{ app.request.locale|upper }}
        {% endif %}
    </h1>

    <ul>
        <li>
            <a href="{{ path('team_activity_new') }}">Create</a> a new
            activity {% if 'en' != app.request.locale %} translation{% endif %}
        </li>
        <li>
            <a href="{{ path('team_activity_delete_confirm') }}">Delete</a> the last
            activity {% if 'en' != app.request.locale %} translation{% endif %}
        </li>
    </ul>
    <table style="border-spacing: 10px;">
        <thead>
        <tr align="left">
            <th>Id</th>
            <th style="width: 150px;">Actions</th>
            <th>Phase</th>
            <th>Name</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        {% for activity2 in activity2s|reverse %}
            <tr>
                <td align="right">{{ activity2.retromatId }}</td>
                <td>
                    <a href="{{ path('team_activity_edit', { 'id': activity2.id }) }}">edit</a> |
                    <a href="{{ path('team_activity_show', { 'id': activity2.id }) }}">preview</a> |
                    <a href="{{ path('activities_by_id', { 'id': activity2.retromatId }) }}" target="_blank">public</a>
                </td>
                <td align="center">{{ activity2.phase }}</td>
                <td>{{ activity2.getName }}</td>
                <td>{{ activity2.getSummary }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
