{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Sans|Droid+Serif"/>
    <link rel="stylesheet" type="text/css" href="/static/team-v2.css">
{% endblock %}

{% block body %}
    <span class="topline smaller"><a href="{{ path('team_activity_index') }}">&lt; List</a></span>
    <div class="mainContent">
        <h1>Edit Activity{% if 'en' != app.request.locale %} Translation {{ app.request.locale|upper }}{% endif %}:
            {{ activity2.retromatId }}</h1>
        Keep a local copy of your translation: <strong>There is no &quot;undo&quot;!</strong>
        <br>
        <br>
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {{ form_label(edit_form.retromatId, 'Id: ') }}
        {{ form_errors(edit_form.retromatId) }}
        {{ form_widget(edit_form.retromatId, {'attr': {'class': 'idField'}}) }}
        <a target="_blank" href="{{ path('activities_by_id', { 'id': activity2.retromatId, '_locale': 'en' }) }}">View
            English live version &quot;{{ activity2.translate('en').getName() }}&quot;</a>
        <br>
        <br>
        {{ form_label(edit_form.phase) }}
        <br>
        {{ form_errors(edit_form.phase) }}
        {{ form_widget(edit_form.phase) }}
        <br>
        <br>
        {{ form_label(edit_form.name) }}
        <br>
        {{ form_errors(edit_form.name) }}
        {{ form_widget(edit_form.name, {'attr': {'cols': 80, 'rows': 1, }}) }}
        <br>
        <br>
        {{ form_label(edit_form.summary) }}
        <br>
        {{ form_errors(edit_form.summary) }}
        {{ form_widget(edit_form.summary, {'attr': {'cols': 80, 'rows': 1, }}) }}
        <br>
        <br>
        {{ form_label(edit_form.desc) }}
        <br>
        {{ form_errors(edit_form.desc) }}
        {{ form_widget(edit_form.desc, {'attr': {'class': 'description', 'cols': 80, 'rows': 10, }}) }}
        <br>
        <br>
        {{ form_label(edit_form.duration) }}
        <br>
        {{ form_errors(edit_form.duration) }}
        {{ form_widget(edit_form.duration, {'attr': {'class': 'shorter', 'cols': 80, 'rows': 1, }}) }}
        <br>
        <br>


        {{ form_row(edit_form.duration) }}
        {{ form_row(edit_form.source) }}
        {{ form_row(edit_form.more) }}
        {{ form_row(edit_form.stage) }}
        {{ form_row(edit_form.more) }}
        {{ form_row(edit_form.suitable) }}
        <input type="submit" value="Update"/>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
