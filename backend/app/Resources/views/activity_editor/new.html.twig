{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/static/team.css">
{% endblock %}

{% form_theme form 'form_table_layout.html.twig' %}

{% block body %}
    <ul>
        <li>
            <a href="{{ path('team_activity_index') }}">Back to the list</a>
        </li>
    </ul>
    <h1>Create Activity</h1>
    <ul>
        <li>Click "Create" (below the form), to publish your new activity.</li>
        <li>Following creation you will immediately see a preview. Browser caches keep the old versions of activity
            pages for up to 10 minutes.
        </li>
    </ul>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Create"/>
    {{ form_end(form) }}
{% endblock %}
